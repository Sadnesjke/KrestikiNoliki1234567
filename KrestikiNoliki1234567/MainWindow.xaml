<Window x:Class="KrestikiNoliki1234567.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики v1.0" Height="400" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Первая версия" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <Grid Grid.Row="1" x:Name="GameGrid" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Btn00" Grid.Row="0" Grid.Column="0" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn01" Grid.Row="0" Grid.Column="1" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn02" Grid.Row="0" Grid.Column="2" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn10" Grid.Row="1" Grid.Column="0" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn11" Grid.Row="1" Grid.Column="1" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn12" Grid.Row="1" Grid.Column="2" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn20" Grid.Row="2" Grid.Column="0" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn21" Grid.Row="2" Grid.Column="1" Click="Button_Click" FontSize="48"/>
            <Button x:Name="Btn22" Grid.Row="2" Grid.Column="2" Click="Button_Click" FontSize="48"/>
        </Grid>
    </Grid>
</Window>